const iconMenu=document.querySelector(".menu__icon"),menuBody=document.querySelector(".menu__body");iconMenu&&iconMenu.addEventListener("click",(function(e){iconMenu.classList.toggle("_active"),menuBody.classList.toggle("_active")}));const social=document.querySelector(".social"),socialMenu=document.querySelector(".social__list"),screen=window.matchMedia("(max-width:767px)");screen.matches?menuBody.append(socialMenu):social.prepend(socialMenu);let i=1;for(let e of reviews__slider.querySelectorAll("li"))e.style.position="relative",e.insertAdjacentHTML("beforeend",`<span style="position:absolute;left:0;top:0">${i}</span>`),i++;let width=410,count=2,list=reviews__slider.querySelector("ul"),listElems=reviews__slider.querySelectorAll("li"),position=0;reviews__slider.querySelector(".prev").onclick=function(){position+=width*count,position=Math.min(position,0),list.style.marginLeft=position+"px"},reviews__slider.querySelector(".next").onclick=function(){position-=width*count,position=Math.max(position,-width*(listElems.length-count)),list.style.marginLeft=position+"px"};